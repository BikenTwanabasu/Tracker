<script>
    $(document).ready(function () {
        GetAgentDeliveryTask();
    });
    function GetAgentDeliveryTask() {
        debugger;
        var Agentid = @ViewBag.Id;

        $.ajax({
            url: '@Url.Action("AgentDeliveryTaskJson","AgnetDashboard")',
            type: 'Get',
            data: {
